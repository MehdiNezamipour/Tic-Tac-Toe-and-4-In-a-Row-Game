<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controllers.fragments.TicTacToeFragment">

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/textView_game_tic_tac_toe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/game_tic_tac_toe"/>

    <androidx.gridlayout.widget.GridLayout
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:rowCount="3"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_1_1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_1_2"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_1_3"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_2_1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_2_2"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_2_3"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <Button
            android:id="@+id/button_3_1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_3_2"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <Button
            android:id="@+id/button_3_3"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        
    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>